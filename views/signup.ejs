<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .custom_nav {
            background-color: rgb(73, 101, 255);
        }

        .button {
            background-color: yellow;
        }

        .button:hover {
            background-color: black;
            color: white;
        }

        .form-control:focus {
            outline: none;
            border-color: #2563eb; /* Tailwind blue-600 */
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.5); /* Tailwind blue-600 */
        }
    </style>
</head>

<body class="bg-gray-900 text-gray-100">

    <nav class="bg-blue-600 dark:bg-gray-800 p-4">
        <div class="container mx-auto flex justify-between items-center">
            <a class="text-white text-lg font-bold" href="#">ZakMart</a>
            <button class="lg:hidden text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon">â˜°</span>
            </button>
            <div class="hidden lg:flex" id="navbarNav">
                <ul class="flex space-x-4">
                    <li>
                        <a href="/products"><button class="btn bg-yellow-400 hover:bg-black hover:text-white text-black py-2 px-4 rounded">Home</button></a>
                    </li>

                    <% if(user){ %>
                        <li>
                            <a href="/profile"><button class="btn bg-yellow-400 hover:bg-black hover:text-white text-black py-2 px-4 rounded">Profile</button></a>
                        </li>
                        <li>
                            <a href="/cart"><button class="btn bg-yellow-400 hover:bg-black hover:text-white text-black py-2 px-4 rounded">Cart</button></a>
                        </li>                            
                        <li>
                            <a href="/logout"><button class="btn bg-yellow-400 hover:bg-black hover:text-white text-black py-2 px-4 rounded">Log Out</button></a>
                        </li>
                    <% } else{ %>
                        <li>
                            <a href="/"><button class="btn bg-yellow-400 hover:bg-black hover:text-white text-black py-2 px-4 rounded">Login</button></a>
                        </li>
                        <li>
                            <a href="/signup"><button class="btn bg-yellow-400 hover:bg-black hover:text-white text-black py-2 px-4 rounded">Sign Up</button></a>
                        </li>
                    <% } %>

                </ul>
            </div>
        </div>
    </nav>

    <% if (err === "Account Already Exist") { %>
        <div class="alert alert-danger" role="alert">
            Account Already Exist
        </div>
    <% } %>
    <% if (err === "Success") { %>
        <div class="alert alert-success" role="alert">
            Account Created Successfully
        </div>
    <% } %>

    <div class="container mx-auto py-8">
        <h1 class="text-center text-3xl mb-6">SignUp Page</h1>
        <div class="w-full max-w-md mx-auto bg-gray-800 p-8 rounded-lg shadow-lg">
            <form action="./signup" method="POST">
                <div class="mb-4">
                    <label for="uid" class="block text-gray-300 text-sm font-bold mb-2">UserID</label>
                    <input name="uid" type="text" class="form-control w-full p-2 rounded bg-gray-700 text-gray-100 focus:border-blue-600" id="uid" placeholder="User Id">
                </div>
                <div class="mb-4">
                    <label for="pass" class="block text-gray-300 text-sm font-bold mb-2">Password</label>
                    <input name="pass" type="password" class="form-control w-full p-2 rounded bg-gray-700 text-gray-100 focus:border-blue-600" id="pass" placeholder="Password">
                </div>
                <div class="text-center">
                    <button class="btn bg-yellow-400 hover:bg-black hover:text-white p-2 rounded">Signup</button>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.tailwindcss.com"></script>
</body>

</html>
